<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>



<VBox xmlns:fx="http://javafx.com/fxml/1" styleClass="table-view" fx:controller="controller.LoginController" spacing="10" prefWidth="660" alignment="CENTER"   >

    <BorderPane >
        <top>
                <Button text="signup instead" BorderPane.alignment="TOP_RIGHT" styleClass="textbutton" style="-fx-padding: 10 20 0 0;" onAction="#handleSignupPage" />
        </top>
    </BorderPane>
    
   <Text text="Login" styleClass="subtitle" /> 
                
    <VBox spacing="20" alignment="CENTER" style="-fx-padding: 20 0 40 0;"  > 

               <Text  text="Username" styleClass="label" />
               <TextField fx:id="usernameTf" promptText="e.g. abdulQ" styleClass="textfield" /> 

               <Text text="Password" styleClass="label" />
               <PasswordField fx:id="passwordPf"  promptText="e.g. Aq91$!"  styleClass="textfield"  />
               
               <Button text="Login" styleClass="mainbutton" onAction="#handleLogin" >
                    <VBox.margin>
                     <Insets>
                         <top>20</top>
                     </Insets>
                 </VBox.margin>
               </Button>
               <Text fx:id="errorLabel" fill="RED" text="invalid details" visible="false" styleClass="errorLabel" /> 
    </VBox>

                    

    
    <stylesheets>
        <URL value="@recipemanagerfx.css" />
    </stylesheets>
    
</VBox>